<div class="show-wrapper">
  <h1 class="title"><%= @article.title %>
  </h2>

  <p class="by">By: <%=@article.author_name%></p>
  <p class="by">Section: <%=@article.category.name%></p>
  <p class="by">Created: <%=@article.created_at%></p>

  <div class="article-phot">

    <%= image_tag @article.photo_url, class: "article-show-photo" %>
    <p class="article-show-p"><%= @article.body%></p>

  </div>

  <!-- <%= image_tag @article.photo_url, class: "article-show-photo" %>
  <h3 class="article-show-edit"><%= link_to "Edit Article", edit_article_path(@article) %></h3> -->

  <% @article.comments.each do |comment| %>
  <p class="comment-container"><%= link_to "#{comment.body} by: #{comment.author_name}", article_comment_path(@article, comment), class:"comment"%></p><br>
  <% end %>
  <h3 class="all-buttons hvr-fade"><%= link_to "Write a comment", new_article_comment_path(@article) %></h3>

  <%if @article.user == current_user && user_signed_in?%>
      <h3 class="all-buttons hvr-fade"><%= link_to "Edit Article", edit_article_path(@article) %></h3>

  <%  end %>





</div>
