
<h1><%= @article.title %> </h2>
<p><%= @article.body%></p>
<p><%= @article.created_at%></p>
<h3><%= link_to "Edit Article", edit_article_path(@article) %></h3>


<%= image_tag @article.photo_url, class: "article-photo" %>



<h1>comments</h1>
  <ul>
  <% @article.comments.each do |comment| %>
      <h2><%= link_to "#{comment.body}", article_comment_path(@article, comment)%></h2>

    <h3><%=comment.author_name%></h3>

    <% end %>
</ul>
<h3><%= link_to "Write a comment", new_article_comment_path(@article) %></h3>
