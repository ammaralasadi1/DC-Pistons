<%# You don't need to rewrite the boilerplate here (html, head, etc) because this whole
file is going to be rendered within the yield in layouts/application.html.erb %>
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="welcome">

      <div class="welcome-logo">
        <img src="http://i.imgur.com/0qdjhbR.png"/>
      </div>

      <div class="welcome-img">
        <img src="http://files1.porsche.com/filestore/image/multimedia/none/rd-2014-porscheclassic-models-roadvehicles-911g-teaser/normal/8144464b-f0f0-11e5-84b6-0019999cd470/porsche-normal.jpg">
      </div>

    </div>
<hr>
    <div class="article-index-container">
      <%if @articles.count == 0 %>
      <p class="category-notice">There are no cars in this category</p>
      <%end%>
      <%@articles.each do |article| %>

      <div class="index-photo">
        <%= image_tag article.photo_url, class:"article-index-photo"%>
        <p class="article-title"><%= link_to article.title, article %></p>

      </div>

      <% end %>

    </div>

  </div>

</body>
</html>
