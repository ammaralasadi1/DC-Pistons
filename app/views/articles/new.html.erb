<h2>New Article</h2>

<%= form_for @article do |f| %>
<div class="form-wrapper">

  <div class="form-row">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>


  <div class="form-row">
    <%= f.label :body %>
    <%= f.text_field :body %>
  </div>


  <div class="form-row">
    <%= f.label :photo_url %>
    <%= f.text_field :photo_url %>
  </div>

  <div class="form-row">
    <%= f.label :author_name %>
    <%= f.text_field :author_name %>
  </div>


  <div class="form-row">
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
  </div>

  <div class="form-row">
    <%= f.submit %>
  </div>
</div>
<% end %>
