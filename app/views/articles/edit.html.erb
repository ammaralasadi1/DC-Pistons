
<h2>Submit Your Story</h2>

<%= form_for @article do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_field :body %>

  <%= f.label :author_name %>
  <%= f.text_field :author_name %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>


  <%= f.submit %>
<% end %>

<%= form_for @article, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
