<h2 class="title">Share you story</h2>

<%= form_for [@article, @comment] do |f| %>
<div class="form-wraper">
  <div class="form-row">

    <%= f.label :body %>
    <%= f.text_field :body %>

  </div>

  <div class="form-row">

    <%= f.label :author_name %>
    <%= f.text_field :author_name %>

  </div>

  <div class="form-row">

    <%= f.submit %>
    <% end %>

  </div>

</div>
