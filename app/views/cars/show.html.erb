<p id="notice"><%= notice %></p>


<div class="car-show">


<p class="title">
<%= @car.title %>
</p>
<div class="car-show-phot">
  <%= image_tag @car.photo_url, class:"for-sale"%>
</div>


<p class="ad">
<%= @car.body%>
</p>

<p class="car-info">
<%= @car.make %>
</p>

<p class="car-info">
<%= @car.model %>
</p>

<p class="car-info">
  <%= @car.year %>
</p>

<p class="car-info">
<%= @car.price %>
</p>

<p class="car-info">
<%= @car.seller_name %>
</p>

<p class="car-info">
<%= @car.seller_phone %>
</p>





<div>
<%if @car.user == current_user && user_signed_in?%>
<%= link_to 'Delete', @car, method: :delete, data: { confirm: 'Are you sure?' }, class: "nav-content hvr-fade"%> |
<%= link_to 'Edit', edit_car_path(@car), class: "nav-content hvr-fade" %> |
<%  end %>

<%= link_to 'Back', cars_path, class:"nav-content hvr-fade" %>

</div>

</div>
